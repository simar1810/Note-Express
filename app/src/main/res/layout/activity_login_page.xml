<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".loginPage"
	android:background="@color/black">
	<RelativeLayout android:id="@+id/content_container" android:layout_width="wrap_content" android:layout_height="wrap_content">

		<View
			android:id="@+id/_bg__login_page"
			android:layout_width="396dp"
			android:layout_height="786dp"
			android:layout_marginStart="0dp"
			android:layout_marginTop="0dp"
			android:background="@drawable/_bg__login_page_shape" />

		<View
			android:id="@+id/base"
			android:layout_width="396dp"
			android:layout_height="786dp"
			android:layout_marginStart="0dp"
			android:layout_marginTop="0dp"
			android:background="@drawable/base_shape" />

		<TextView android:id="@+id/don_t_have_an_account__sign_up" android:textStyle="bold" android:layout_gravity="center_horizontal|center" android:gravity="center" android:textSize="12.6sp" android:textColor="@color/don_t_have_an_account__sign_up_color" android:layout_marginLeft="81dp" android:layout_marginTop="755dp" android:layout_width="257.30065488815dp" android:layout_height="23.300654888153dp" android:text="@string/don_t_have_an_account__sign_up_string"/>
		<TextView android:id="@+id/forgot_password_" android:textStyle="bold" android:layout_gravity="center_horizontal|center" android:gravity="center" android:textSize="12.6sp" android:textColor="@color/forgot_password__color" android:layout_marginLeft="81dp" android:layout_marginTop="731dp" android:layout_width="257.30065488815dp" android:layout_height="23.300654888153dp" android:text="@string/forgot_password__string"/>
		<RelativeLayout android:id="@+id/button_login" android:layout_marginTop="504dp" android:layout_marginStart="132dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:id="@+id/login" android:textStyle="bold" android:textSize="12.6sp" android:textColor="@color/login_color" android:layout_marginLeft="49.76dp" android:layout_marginTop="9.45dp" android:layout_width="50.300654888153dp" android:layout_height="28.300654888153dp" android:text="@string/login_string"/>
		</RelativeLayout>
		<RelativeLayout android:id="@+id/header_area" android:layout_marginTop="0dp" android:layout_marginStart="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

		<TextView
			android:id="@+id/login_ek1"
			android:layout_width="151dp"
			android:layout_height="79dp"
			android:layout_marginLeft="145dp"
			android:layout_marginTop="295dp"
			android:text="@string/login_ek1_string"
			android:textColor="@color/don_t_have_an_account__sign_up_color"
			android:textSize="40sp" />

		<RelativeLayout
			android:id="@+id/button_password"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="66dp"
			android:layout_marginTop="435.5dp">

			<TextView
				android:id="@+id/password"
				android:layout_width="173dp"
				android:layout_height="40dp"
				android:layout_marginLeft="111.6dp"
				android:layout_marginTop="11.95dp"
				android:text="@string/password_string"
				android:textColor="@color/login_color"
				android:textSize="12.6sp"
				android:textStyle="bold" />
		</RelativeLayout>
		<RelativeLayout android:id="@+id/button_username" android:layout_marginTop="369.5dp" android:layout_marginStart="66dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<RelativeLayout android:id="@+id/user_alt_fill" android:layout_marginTop="9.45dp" android:layout_marginStart="84.45dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

			<EditText
				android:id="@+id/username"
				android:layout_width="179dp"
				android:layout_height="49dp"
				android:layout_marginLeft="111.6dp"
				android:layout_marginTop="11.95dp"
				android:text="@string/username_string"
				android:textColor="@color/login_color"
				android:textSize="12.6sp"
				android:textStyle="bold" />
		</RelativeLayout>
	</RelativeLayout>


	<!--	<VideoView-->
<!--		android:id="@+id/videoView"-->
<!--		android:layout_width="match_parent"-->
<!--		android:layout_height="match_parent">-->

<!--	</VideoView>-->


</androidx.constraintlayout.widget.ConstraintLayout>